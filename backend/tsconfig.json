{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
  },
  "include": [
    "src/**/*.ts",
    "src/lib/validation.ts",
    "src/lib/customError.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
